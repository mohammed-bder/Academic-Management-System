@model Instructor

@{
    ViewData["Title"] = "GetDetails";
}

<h1 class="text-center">Instructor Details</h1>

<div class="container mt-4 d-flex justify-content-center">
    <!-- Center the card and make it wider -->
    <div class="card shadow" style="width: 30rem;  border-radius: 10px; ">
        <img src="~/Images/@Model.ImgURL" class="card-img-top" alt="Instructor Photo">
        <div class="card-body">
            <h5 class="card-title text-center">@Model.Name</h5>
            <p class="card-text">
                <strong>Address:</strong> @Model.Address<br>
                <strong>Salary:</strong> @Model.Salary<br>
                <strong>Department Id:</strong> @Model.DepartmentId<br>
                <strong>Course Id:</strong> @Model.CourseId
            </p>
        </div>
    </div>
</div>

<!-- Back to List Button -->
<div class="container mt-3 d-flex justify-content-center">
    <a href="/Instructor/GetAll" class="btn btn-primary">Back to List</a>
</div>
