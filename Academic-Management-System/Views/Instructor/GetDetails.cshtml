@model Instructor

@{
    ViewData["Title"] = "GetDetails";
}

<h1 class="text-center fw-bold text-primary mb-4">Instructor Details</h1>

<div class="container mt-4 d-flex justify-content-center">
    <!-- Center the card and make it wider -->
    <div class="card shadow-lg border-0 rounded-3" style="width: 30rem;">
        <img src="~/Images/@Model.ImgURL" class="card-img-top rounded-top" alt="@Model.Name's Photo" style="height: 440px; object-fit: cover;">
        <div class="card-body">
            <h5 class="card-title text-center text-uppercase">@Model.Name</h5>
            <p class="card-text">
                <strong>Address:</strong> @Model.Address<br>
                <strong>Salary:</strong> @Model.Salary<br>
                <strong>Department Id:</strong> @Model.DepartmentId<br>
                <strong>Course Id:</strong> @Model.CourseId
            </p>
        </div>
    </div>
</div>

<!-- Back to List Button -->
<div class="container mt-3 d-flex justify-content-center">
    <a href="/Instructor/GetAll" class="btn btn-primary rounded-pill" style="width: 130px; height: 40px;">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>
