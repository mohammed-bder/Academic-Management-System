@model InstWithCourseListAndDeptList

@{
    ViewData["Title"] = "Add Instructor";
}

<h1 class="text-center mb-4 fw-bold text-primary">Add Instructor</h1>
<hr />
<br />
<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow" style="width: 100%; max-width: 600px; border-radius: 10px;">
        <div class="card-body">
            <form action="/Instructor/SaveAdd" method="post" enctype="multipart/form-data">

                <!-- Name -->
                <div class="form-group mb-3">
                    <label for="Name">Name</label>
                    <input type="text" id="Name" name="Name" value="@Model?.Name" class="form-control" placeholder="Enter Name" required>
                </div>

                <!-- Image Upload -->
                <div class="form-group mb-3">
                    <label for="ImageFile">Upload Image</label>
                    <input type="file" id="ImageFile" name="ImageFile" class="form-control" accept="image/*">
                </div>

                <!-- Salary -->
                <div class="form-group mb-3">
                    <label for="Salary">Salary</label>
                    <input type="number" id="Salary" name="Salary" class="form-control" placeholder="Enter Salary" required>
                </div>

                <!-- Address -->
                <div class="form-group mb-3">
                    <label for="Address">Address</label>
                    <input type="text" id="Address" name="Address" value="@Model?.Address" class="form-control" placeholder="Enter Address" required>
                </div>

                <!-- Department List -->
                <div class="form-group mb-3">
                    <label for="DepartmentId">Department</label>
                    <select id="DepartmentId" name="DepartmentId" class="form-control" required>
                        <option value="0">-- Select Department --</option>
                        @foreach (var item in Model.DeptList)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <!-- Course List -->
                <div class="form-group mb-3">
                    <label for="CourseId">Course</label>
                    <select id="CourseId" name="CourseId" class="form-control" required>
                        <option value="">-- Select Course --</option>
                        @foreach (var item in Model.CourseList)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-4">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                </div>

            </form>

            <!-- Back to List Button -->
            <div class="text-center mt-3">
                <a href="/Instructor/GetAll" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

<!-- Hover Effect CSS -->
<style>
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004080;
    }

    .form-control {
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
        }

    label {
        font-weight: bold;
    }

    input::placeholder, select {
        color: #6c757d;
    }
</style>
