@model List<Instructor>

@{
    ViewData["Title"] = "GetAll";
    int index = 1;
}

<h1 class="text-center">All Instructors</h1>
<hr />
<br />

<div class="d-flex justify-content-between mb-3">

    <!-- Search form -->
    <form class="form-inline d-flex w-50" method="get" asp-action="Search" asp-controller="Instructor">
        <input type="text" name="Name" class="form-control" style="border-radius: 12px; width: 52%;" placeholder="Search by name" value="@ViewBag.Name"/>
        <button type="submit" class="btn btn-primary" style="width: 124px; height: 40px; border-radius: 10px; margin-left: 12px;">Search</button>
    </form>

    <!-- Add button -->
    <a href="/Instructor/Add" class="btn btn-success" style="width: 120px; height: 40px; border-radius: 10px;">Add</a>
</div>

<table class="table table-bordered table-hover">
    <thead>
        <tr class="text-center">
            <th>Id</th>
            <th>Name</th>
            <th>Img</th>
            <th>Salary</th>
            <th>Address</th>
            <th>Course Id</th>
            <th>Department Id</th>
            <th>Details</th> 
            <th>Edit</th>    
            <th>Delete</th>  
        </tr>
    </thead>

    <tbody class="text-center">
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@index</td>
                <td>@instructor.Name</td>
                <td>
                    <img src="~/Images/@(string.IsNullOrEmpty(instructor.ImgURL) ? "1.png" : instructor.ImgURL)"
                         style="width:80px;"
                         alt="@instructor.Name's photo" />
                </td>
                <td>@instructor.Salary</td>
                <td>@instructor.Address</td>
                <td>@instructor.CourseId</td>
                <td>@instructor.DepartmentId</td>
                <td>
                    <!-- Details Button -->
                    <a href="/Instructor/GetDetails/@instructor.Id" class="btn btn-info" style="width: 100px; height: 40px; border-radius: 10px;">
                        <i class="fa-solid fa-circle-info"></i>Details
                    </a>
                </td>
                <td>
                    <!-- Edit Button -->
                    <a href="/Instructor/Edit/@instructor.Id" class="btn btn-warning" style="width: 100px; height: 40px; border-radius: 10px;">
                        <i class="fa-solid fa-pen-to-square"></i> Edit
                    </a>
                </td>
                <td>
                    <!-- Delete Button -->
                    <button type="button" class="btn btn-danger" style="width: 100px; height: 40px; border-radius: 10px;"
                            onclick="showDeleteModal(@instructor.Id)">
                        <i class="fa-solid fa-trash"></i> Delete
                    </button>
                </td>

            </tr>
            ++index;
        }
    </tbody>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    let instructorIdToDelete = 0;

    function showDeleteModal(instructorId) {
        instructorIdToDelete = instructorId;
        var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        deleteModal.show();
    }
    document.getElementById('confirmDeleteButton').addEventListener('click', function () {

        var form = document.createElement('form');
        form.method = 'post';
        form.action = '/Instructor/Delete/' + instructorIdToDelete;

        document.body.appendChild(form);
        form.submit();
    });
</script>
