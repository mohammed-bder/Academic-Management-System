@model TraineeWithDeptList

@{
    ViewData["Title"] = "Add Trainee";
}

<h1 class="text-center mb-4 fw-bold text-primary">Add Trainee</h1>
<hr />
<br />

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
        <div class="card-body">
            <form action="/Trainee/SaveAdd" method="post" enctype="multipart/form-data">

                <!-- Name -->
                <div class="form-group mb-3">
                    <label for="Name">Name</label>
                    <input type="text" id="Name" name="Name" value="@Model?.Name" class="form-control" placeholder="Enter Name">
                </div>

                <!-- Image Upload -->
                <div class="form-group mb-3">
                    <label for="ImageFile">Upload Image</label>
                    <input type="file" id="ImageFile" name="ImageFile" class="form-control">
                </div>

                <!-- Address -->
                <div class="form-group mb-3">
                    <label for="Address">Address</label>
                    <input type="text" id="Address" name="Address" value="@Model?.Address" class="form-control" placeholder="Enter Address">
                </div>

                <!-- Grade -->
                <div class="form-group mb-3">
                    <label for="Grade">Grade</label>
                    <input type="number" id="Grade" name="Grade" value="@Model?.Grade" class="form-control" placeholder="Enter Grade">
                </div>

                <!-- Department List -->
                <div class="form-group mb-3">
                    <label for="DepartmentId">Department</label>
                    <select id="DepartmentId" name="DepartmentId" class="form-control">
                        <option value="0">-- Select Department --</option>
                        @foreach (var item in Model.DeptList)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-4">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                </div>

            </form>

            <!-- Back to List Button -->
            <div class="text-center mt-3">
                <a href="/Trainee/GetAll" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>

<!-- Hover Effect CSS -->
<style>
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004080;
    }

    .form-control {
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
        }

    label {
        font-weight: bold;
    }

    input::placeholder, select {
        color: #6c757d;
    }

    /* Card shadow */
    .card {
        border-radius: 10px;
    }
</style>
