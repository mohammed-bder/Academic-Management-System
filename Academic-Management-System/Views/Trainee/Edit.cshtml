@model TraineeWithDeptList
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Edit Trainee Information</h1>

<div class="container" style="max-width: 600px;">
    <!-- Add enctype for file upload -->
    <form asp-action="SaveEdit" asp-controller="Trainee" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">

        <!-- Name -->
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" id="Name" name="Name" value="@Model?.Name" class="form-control" placeholder="Enter Name">
        </div>

        <!-- Current Image -->
        <div class="form-group">
            <label for="CurrentImage">Current Image</label><br />
            <img src="~/Images/@Model?.ImgURL" style="width: 80px;" alt="Instructor Image" />
        </div>

        <!-- New Image Upload -->
        <div class="form-group">
            <label for="ImgUpload">Upload New Image</label>
            <input type="file" id="ImgUpload" name="ImgUpload" class="form-control" accept="image/*">
        </div>

        <!-- Address -->
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" id="Address" name="Address" value="@Model?.Address" class="form-control" placeholder="Enter Address">
        </div>

        <!-- Grade -->
        <div class="form-group">
            <label for="Grade">Grade</label>
            <input type="number" id="Grade" name="Grade" value="@Model?.Grade" class="form-control" placeholder="Enter Salary">
        </div>

        <!-- Department List -->
        <div class="form-group">
            <label for="DepartmentId">Department</label>
            <select id="DepartmentId" name="DepartmentId" class="form-control">
                @foreach (var item in Model.DeptList)
                {
                    if (Model.DepartmentId == item.Id)
                    {
                        <option value="@item.Id" selected>@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
        </div>

    </form>

    <!-- Back to List Button -->
    <div class="text-center mt-3">
        <a asp-action="GetAll" asp-controller="Trainee" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<!-- Hover Effect CSS -->
<style>
    .btn-primary:hover {
        background-color: #0056b3; /* Darker blue on hover */
        border-color: #004080;
    }

    .form-control {
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
        }

    label {
        font-weight: bold;
    }

    input::placeholder, select {
        color: #6c757d;
    }
</style>
