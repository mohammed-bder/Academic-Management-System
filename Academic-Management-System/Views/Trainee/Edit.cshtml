@model TraineeWithDeptList
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4 fw-bold text-primary">Edit Trainee Information</h1>
<hr />
<br />

<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow-lg" style="max-width: 600px; width: 100%; border-radius: 12px;">
        <div class="card-body">
            <!-- Add enctype for file upload -->
            <form asp-action="SaveEdit" asp-controller="Trainee" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">

                <!-- Name -->
                <div class="form-group mb-3">
                    <label for="Name">Name</label>
                    <input type="text" id="Name" name="Name" value="@Model?.Name" class="form-control" placeholder="Enter Name">
                </div>

                <!-- Current Image -->
                <div class="form-group mb-3">
                    <label for="CurrentImage">Current Image</label><br />
                    <img src="~/Images/@Model?.ImgURL" style="width: 80px;" alt="Trainee Image" />
                </div>

                <!-- New Image Upload -->
                <div class="form-group mb-3">
                    <label for="ImgUpload">Upload New Image</label>
                    <input type="file" id="ImgUpload" name="ImgUpload" class="form-control" accept="image/*">
                </div>

                <!-- Address -->
                <div class="form-group mb-3">
                    <label for="Address">Address</label>
                    <input type="text" id="Address" name="Address" value="@Model?.Address" class="form-control" placeholder="Enter Address">
                </div>

                <!-- Grade -->
                <div class="form-group mb-3">
                    <label for="Grade">Grade</label>
                    <input type="number" id="Grade" name="Grade" value="@Model?.Grade" class="form-control" placeholder="Enter Grade">
                </div>

                <!-- Department List -->
                <div class="form-group mb-3">
                    <label for="DepartmentId">Department</label>
                    <select id="DepartmentId" name="DepartmentId" class="form-control">
                        @foreach (var item in Model.DeptList)
                        {
                            if (Model.DepartmentId == item.Id)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-4">
                    <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
                </div>

            </form>

            <!-- Back to List Button -->
            <div class="text-center mt-3">
                <a asp-action="GetAll" asp-controller="Trainee" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Hover Effect CSS -->
<style>
    .btn-primary:hover {
        background-color: #0056b3; /* Darker blue on hover */
        border-color: #004080;
    }

    .form-control {
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
        }

    .card {
        border-radius: 12px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    label {
        font-weight: bold;
    }

    input::placeholder, select {
        color: #6c757d;
    }
</style>
