@model CourseWithDeptList
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Edit Course Information</h1>

<div class="container" style="max-width: 600px;">
    <!-- Add enctype for file upload -->
    <form action="/Course/SaveEdit/@Model.Id" method="post">

        <!-- Name -->
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" id="Name" name="Name" value="@Model?.Name" class="form-control" placeholder="Enter Name">
        </div>

        <!-- Degree -->
        <div class="form-group">
            <label for="Degree">Degree</label>
            <input type="number" id="Degree" name="Degree" value="@Model?.Degree" class="form-control" placeholder="Enter Degree">
        </div>

        <!-- MinDegree -->
        <div class="form-group">
            <label for="MinDegree">MinDegree</label>
            <input type="number" id="MinDegree" name="MinDegree" value="@Model?.MinDegree"  class="form-control" placeholder="Enter Minimun Degree">
        </div>

        <!-- CourseHours -->
        <div class="form-group">
            <label for="CourseHours">CourseHours</label>
            <input type="number" id="CourseHours" name="CourseHours" value="@Model?.CourseHours" class="form-control" placeholder="Enter Course Hours">
        </div>

        <!-- Department List -->
        <div class="form-group">
            <label for="DepartmentId">Department</label>
            <select id="DepartmentId" name="DepartmentId" class="form-control">
                @foreach (var item in Model.DeptList)
                {
                    if (Model.DepartmentId == item.Id)
                    {
                        <option value="@item.Id" selected>@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
        </div>

    </form>

    <!-- Back to List Button -->
    <div class="text-center mt-3">
        <a href="/Course/GetAll" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<!-- Hover Effect CSS -->
<style>
    .btn-primary:hover {
        background-color: #0056b3; /* Darker blue on hover */
        border-color: #004080;
    }

    .form-control {
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
        }

    label {
        font-weight: bold;
    }

    input::placeholder, select {
        color: #6c757d;
    }
</style>
