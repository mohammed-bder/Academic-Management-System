@model Course
@{
    ViewData["Title"] = "GetDetails";
}

<h1 class="text-center  fw-bold text-primary">Course Details</h1>
<hr />
<br />
<div class="container mt-4 d-flex justify-content-center">
    <!-- Center the card and make it wider -->
    <div class="card shadow" style="width: 30rem;  border-radius: 10px; ">
        <div class="card-body">
            <h5 class="card-title text-center">@Model.Name</h5>
            <p class="card-text">
                <strong>Degree:</strong> @Model.Degree<br>
                <strong>MinDegree:</strong> @Model.MinDegree<br>
                <strong>CourseHours:</strong> @Model.CourseHours<br>
                <strong>Department Id:</strong> @Model.DepartmentId
            </p>
        </div>
    </div>
</div>

<!-- Back to List Button -->
<div class="container mt-3 d-flex justify-content-center">
    <a href="/Course/GetAll" class="btn btn-primary"><i class="bi bi-arrow-left"></i> Back to List</a>
</div>

