@model RoleViewModel

@{
    ViewData["Title"] = "Add Role";
}

<h1 class="text-center">Add Role</h1>
<hr />

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px; border-radius: 10px;">
        @* Display success message if it exists *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="SaveRole" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="RoleName" class="form-label"></label>
                <input asp-for="RoleName" class="form-control" placeholder="Enter role name" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="form-group d-grid">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" style="border-radius: 5px;" />
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" asp-controller="Home" class="text-decoration-none" style="color: #007bff;">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
